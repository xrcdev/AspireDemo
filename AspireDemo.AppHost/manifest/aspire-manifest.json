{
  "$schema": "https://json.schemastore.org/aspire-8.0.json",
  "resources": {
    "cache": {
      "type": "parameter.v0",
      "connectionString": "{cache.value}",
      "value": "{cache.inputs.value}",
      "inputs": {
        "value": {
          "type": "string",
          "secret": true
        }
      }
    },
    "consul": {
      "type": "container.v0",
      "image": "hashicorp/consul:1.22",
      "args": [
        "agent",
        "-server",
        "-bootstrap-expect=1",
        "-ui",
        "-client=0.0.0.0",
        "-data-dir=/consul/data"
      ],
      "bindMounts": [
        {
          "source": "../consul-data",
          "target": "/consul/data",
          "readOnly": false
        }
      ],
      "env": {
        "CONSUL_BIND_INTERFACE": "eth0"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "targetPort": 8500
        },
        "dns": {
          "scheme": "udp",
          "protocol": "tcp",
          "transport": "tcp",
          "targetPort": 8600
        }
      }
    },
    "apiservice": {
      "type": "container.v1",
      "build": {
        "context": "../../AspireDemo.ApiService",
        "dockerfile": "../../AspireDemo.ApiService/Dockerfile"
      },
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ASPNETCORE_FORWARDEDHEADERS_ENABLED": "true",
        "HTTP_PORTS": "{apiservice.bindings.http.targetPort}",
        "CONSUL_ADDRESS": "{consul.bindings.http.url}"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "targetPort": 8080
        },
        "https": {
          "scheme": "https",
          "protocol": "tcp",
          "transport": "http",
          "targetPort": 8080
        }
      }
    },
    "gateway": {
      "type": "project.v0",
      "path": "../../AspireDemo.Gateway/AspireDemo.Gateway.csproj",
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ASPNETCORE_FORWARDEDHEADERS_ENABLED": "true",
        "HTTP_PORTS": "{gateway.bindings.http.targetPort}",
        "CONSUL_ADDRESS": "{consul.bindings.http.url}"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http"
        },
        "https": {
          "scheme": "https",
          "protocol": "tcp",
          "transport": "http"
        }
      }
    },
    "webfrontend": {
      "type": "container.v1",
      "build": {
        "context": "../../AspireDemo.Web",
        "dockerfile": "../../AspireDemo.Web/Dockerfile"
      },
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ASPNETCORE_FORWARDEDHEADERS_ENABLED": "true",
        "HTTP_PORTS": "{webfrontend.bindings.http.targetPort}",
        "ConnectionStrings__cache": "{cache.connectionString}",
        "CACHE_HOST": "{cache.bindings.tcp.host}",
        "CACHE_PORT": "{cache.bindings.tcp.port}",
        "CACHE_PASSWORD": "{cache-password.value}",
        "CACHE_URI": "redis://:{cache-password-uri-encoded.value}@{cache.bindings.tcp.host}:{cache.bindings.tcp.port}",
        "APISERVICE_HTTP": "{apiservice.bindings.http.url}",
        "services__apiservice__http__0": "{apiservice.bindings.http.url}",
        "APISERVICE_HTTPS": "{apiservice.bindings.https.url}",
        "services__apiservice__https__0": "{apiservice.bindings.https.url}",
        "GATEWAY_HTTP": "{gateway.bindings.http.url}",
        "services__gateway__http__0": "{gateway.bindings.http.url}",
        "GATEWAY_HTTPS": "{gateway.bindings.https.url}",
        "services__gateway__https__0": "{gateway.bindings.https.url}"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "targetPort": 8080,
          "external": true
        },
        "https": {
          "scheme": "https",
          "protocol": "tcp",
          "transport": "http",
          "targetPort": 8080,
          "external": true
        }
      }
    },
    "cache-password": {
      "type": "parameter.v0",
      "value": "{cache-password.inputs.value}",
      "inputs": {
        "value": {
          "type": "string",
          "secret": true,
          "default": {
            "generate": {
              "minLength": 22,
              "special": false
            }
          }
        }
      }
    },
    "cache-password-uri-encoded": {
      "type": "annotated.string",
      "value": "{cache-password.value}",
      "filter": "uri"
    }
  }
}